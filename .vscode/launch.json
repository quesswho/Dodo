{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Sandbox",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/bin/Sandbox",
      "args": [],
      "cwd": "${workspaceFolder}/build/Debug/bin",
